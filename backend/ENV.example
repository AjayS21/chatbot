# Local dev (docker-compose Postgres)
DATABASE_URL="postgresql://spur:spur@localhost:5432/spur_dev?schema=public"

# OpenAI (required to generate real replies)
# IMPORTANT: use a real key in your local .env / deployment secrets, not in this repo.
# Use a placeholder here so GitHub Push Protection does not detect a real secret.
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"

# Optional: override the default model (defaults to gpt-4o-mini)
OPENAI_MODEL="gpt-4o-mini"

# LLM safety & cost controls (optional)
LLM_TIMEOUT_MS="15000"
LLM_HISTORY_LIMIT="20"
LLM_MAX_OUTPUT_TOKENS="250"

# Server
HOST="0.0.0.0"
PORT="3001"

